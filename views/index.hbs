<!DOCTYPE html>
<html>
    <head>
        <title>Fakoot</title>
        {{> head}}
    </head>
    <body>
        {{> menu}}
        <div id="content">
            <div class="background" id="contentBackground"></div>
            <div id="greetBox">
                <div id="greetBoxWelcomeText">
                    <p>Welcome to Fake Kahoot!</p>
                    <p>Enter a username and press 'START' to begin</p>
                </div>

                    <div id="greetBoxUsernameInputWrap">
                        <input name="user_name" class="cards" id="greetBoxUsernameInput" placeholder="Enter a username" />
                    </div>
                    <div id="greetBoxStartButtonWrap">
                        <div class="cards buttons" id="greetBoxStartButton" onclick="fetchQuestions();">BEGIN</div>
                    </div>
            </div>
        </div>
        {{> questionView}}
        {{> popup}}
        {{> notify}}
        <script src="javascripts/index.js"></script>
    </body>
</html>